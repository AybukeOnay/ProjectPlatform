@using EntityLayer.Concrete
@model List<CalismaAlani>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Çalışma Alanları</h1>
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Çalışma Alanı</th>
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CalismaAlaniID</th>
            <td>@item.CalismaAlaniTanim</td>

            <td>
                <a href="/AdminCalismaAlani/CalismaAlaniGuncelle/@item.CalismaAlaniID" class="btn btn-primary "><i class="fas fa-pencil-alt"></i>  Güncelle</a>
                <a href="/AdminCalismaAlani/CalismaAlaniSil/@item.CalismaAlaniID" class="btn btn-primary"><i class="fas fa-trash"></i>   Sil</a>
            </td>

        </tr>
    }
</table>

<a class="btn btn-primary" href="/AdminCalismaAlani/CalismaAlaniEkle">
    <i class="fas fa-plus">
    </i>

        Çalışma Alanı Ekle
</a>
