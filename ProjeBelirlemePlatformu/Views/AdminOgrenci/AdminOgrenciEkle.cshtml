                    <option>Kadın</option>
                    <option>Erkek</option>
                </select>
            </div>*@

        @Html.Label("Mail")
        @Html.TextBoxFor(x => x.OgrenciMail, new { @class = "form-control" })

        @Html.Label("Şifre")
        @Html.TextBoxFor(x => x.OgrenciSifre, new { @class = "form-control" })

        @Html.Label("Telefon")
        @Html.TextBoxFor(x => x.OgrenciTelefon, new { @class = "form-control" })

        <br />
        <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i>    Kaydet</button>
    </div>
