@model EntityLayer.Concrete.Ogrenci

@{
    ViewData["Title"] = "AdminOgrenciEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<h3>Öğrenci Ekleme Sayfası</h3>

@using (Html.BeginForm("AdminOgrenciEkle", "AdminOgrenci", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Ad")
        @Html.TextBoxFor(x => x.OgrenciAd, new { @class = "form-control" })

        @Html.Label("Soyad")
        @Html.TextBoxFor(x => x.OgrenciSoyad, new { @class = "form-control" })

        @*<div class="form-group">
