@using EntityLayer.Concrete
@model List<Bildirim>
@{
    ViewData["Title"] = "BildirimleriListele";
    Layout = "~/Views/Shared/OgretimElemaniLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bildirimler</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Bildirim </th>
                        <th> Tarih </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.BildirimID </td>
                            <td> @item.BildirimDetay </td>
                            <td>@item.BildirimTarih.ToShortDateString() </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


