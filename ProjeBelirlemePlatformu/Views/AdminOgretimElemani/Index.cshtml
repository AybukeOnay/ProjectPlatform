@using EntityLayer.Concrete
@model List<OgretimElemani>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Öğretim Elemanları</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Ünvanı</th>
        <th>Mail</th>
        <th></th>
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.OgretimElemaniID</th>
    <td>@item.OgretimElemaniAd</td>
    <td>@item.OgretimElemaniSoyad</td>
    <td>@item.OgretimElemaniUnvan</td>
    <td>@item.OgretimElemaniMail</td>
    <td><a href="/AdminOgretimElemani/AdminOgretimElemaniGuncelle/@item.OgretimElemaniID" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>    Güncelle</a></td>
    <td><a href="/AdminMesaj/MesajGonder/@item.OgretimElemaniID" class="btn btn-primary"><i class="fas fa-comments"></i>    Mesaj Gönder</a></td>

</tr>
    }
</table>
<a href="/AdminOgretimElemani/AdminOgretimElemaniEkle" class="btn btn-primary"><i class="fas fa-plus"></i>    Öğretim Elemanı Ekle</a>

