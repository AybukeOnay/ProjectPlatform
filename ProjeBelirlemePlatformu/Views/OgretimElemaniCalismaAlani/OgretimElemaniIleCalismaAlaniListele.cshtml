@using EntityLayer.Concrete
@model List<OgretimElemaniCalismaAlani>
@{
    ViewData["Title"] = "OgretimElemaniIleCalismaAlaniListele";
    Layout = "~/Views/Shared/OgretimElemaniLayout.cshtml";
}

<h4>Öğretim Elemanı Çalışma Alanları</h4>

<table class="table table-bordered">
    <tr>
        
        <th>Çalışma Alanı</th>
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            
            <td>@item.CalismaAlani.CalismaAlaniTanim</td>
            <td><a href="/OgretimElemaniCalismaAlani/OgretimElemaniCalismaAlaniSil/@item.OgretimElemaniCalismaAlaniID" class="btn btn-gradient-primary btn-fw"><i class="mdi mdi-trash-can"></i>   Sil</a></td>
        </tr>
    }
</table>
<a href="/OgretimElemaniCalismaAlani/OgretimElemaniCalismaAlaniEkle" class="btn btn-gradient-primary btn-fw"><i class="mdi mdi-plus"></i>    Çalışma Alanı Ekle</a>