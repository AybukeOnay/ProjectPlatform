
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Gazi Öğrenci Girişi</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/YazarTema/yazar/writer/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/YazarTema/yazar/writer/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/YazarTema/yazar/writer/assets/css/style.css">
    <link rel="shortcut icon" href="~/YazarTema/yazar/writer/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/YazarTema/yazar/writer/assets/images/Gazi_Üniversitesi_logo.png">
                            </div>
                            <h4 class="font-weight-light">Oturum Açın</h4>
                            <form method="post">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" name="Mail" id="exampleInputEmail1" placeholder="Mail Adresi">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" name="Sifre" id="exampleInputPassword1" placeholder="Şifre">
                                </div>
                                @*<div class="mt-3">
                                        <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="/Login/Index">Giriş Yap</a>
                                    </div>  hclass="pt-3"*@
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> Şifremi Hatırla
                                        </label>
                                    </div>
                                   
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <script src="~/YazarTema/yazar/writer/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/YazarTema/yazar/writer/assets/js/off-canvas.js"></script>
    <script src="~/YazarTema/yazar/writer/assets/js/hoverable-collapse.js"></script>
    <script src="~/YazarTema/yazar/writer/assets/js/misc.js"></script>
</body>
</html>
