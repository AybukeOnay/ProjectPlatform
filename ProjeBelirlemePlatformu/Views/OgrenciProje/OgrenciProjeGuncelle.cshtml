@model EntityLayer.Concrete.Proje

@{
    ViewData["Title"] = "OgrenciProjeGuncelle";
    Layout = "~/Views/Shared/OgrenciLayout.cshtml";
}

@using (Html.BeginForm("OgrenciProjeGuncelle", "OgrenciProje", FormMethod.Post))
    {
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Proje Düzenleme Sayfası</h4>
                    <br />
                    <form class="forms-sample">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ProjeID, new { @class = "form-control" })
                            <label for="exampleInputName1">Proje Adı</label>
                            @Html.TextBoxFor(x => x.ProjeAd, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputName1">Proje Açıklama</label>
                            @Html.TextAreaFor(x => x.ProjeAciklama, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectGender">Proje Türü</label>
                            <select class="form-control" name="ProjeTur" id="exampleSelectGender">
                                <option>Dönem Projesi</option>
                                <option>Tez</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputName1">Çalışma Alanı</label>
                            @Html.DropDownListFor(x => x.CalismaAlaniID, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Öğretim Elemanı</label>
                            @Html.DropDownListFor(x => x.OgretimElemaniID, (List<SelectListItem>)ViewBag.v2, new { @class = "form-control" })
                        </div>
                        @*<div class="form-group">
                            <label>Görsel</label>
                            <input type="file" name="img[]" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input type="text" class="form-control file-upload-info" disabled placeholder="Görsel seç">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-gradient-primary" type="button">Görsel Yükle</button>
                                </span>
                            </div>
                        </div>*@
      
                        <button type="submit" class="btn btn-gradient-primary mr-2"><i class="mdi mdi-border-color"></i>    Güncelle</button>
                        <a href="/OgrenciProje/OgrenciProjeListele" class="btn btn-gradient-primary"><i class="mdi mdi-close"></i>    Vazgeç</a>
                    </form>
                </div>
            </div>
        </div>
    }

