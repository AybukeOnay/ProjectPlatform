@using EntityLayer.Concrete
@model List<Proje>

@{
    ViewData["Title"] = "OgretimElemaniTumProjeleriListele";
    Layout = "~/Views/Shared/OgretimElemaniLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tüm Projeler</h4>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th> Proje Adı </th>
                        <th> Proje Türü </th>
                        <th> Çalışma Alanı </th>
                        <th> Öğretim Elemanı </th>
                        <th> Öğrenci </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                        <tr>
                            <td> @item.ProjeAd </td>
                            <td> @item.ProjeTur </td>
                            <td> @item.CalismaAlani.CalismaAlaniTanim </td>
                            <td> @item.OgretimElemani.OgretimElemaniAd @item.OgretimElemani.OgretimElemaniSoyad </td>
                            <td> @item.Ogrenci.OgrenciAd @item.Ogrenci.OgrenciSoyad</td>
                        </tr>
                    }
                   
                </tbody>
            </table>
            <br />
            <a href="/OgretimElemaniProje/OgretimElemaniProjeListele" class="btn btn-gradient-primary btn-fw"><i class="mdi mdi-arrow-left"></i>    Geri Dön</a>
        </div>
    </div>
</div>



